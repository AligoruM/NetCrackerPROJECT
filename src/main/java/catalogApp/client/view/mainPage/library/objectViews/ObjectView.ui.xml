<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c="urn:import:catalogApp.client.view.components">
    <g:HTMLPanel>
        <g:DecoratorPanel>
            <g:VerticalPanel>
                <g:cell horizontalAlignment="ALIGN_CENTER">
                    <g:Label ui:field="titleLabel"/>
                </g:cell>
                <g:HorizontalPanel width="100%" height="100%">
                    <g:VerticalPanel horizontalAlignment="ALIGN_CENTER">
                        <g:Image ui:field="objectImage"/>
                        <c:RatingPanel ui:field="ratingPanel"/>
                    </g:VerticalPanel>

                    <g:FlexTable ui:field="table"/>
                </g:HorizontalPanel>
            </g:VerticalPanel>
        </g:DecoratorPanel>
    </g:HTMLPanel>
</ui:UiBinder>