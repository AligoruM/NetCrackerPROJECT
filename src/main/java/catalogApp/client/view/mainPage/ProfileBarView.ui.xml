<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HTMLPanel>
        <g:HorizontalPanel ui:field="hPanel" width="100%">
            <g:cell width="50px" horizontalAlignment="ALIGN_LEFT">
                <g:Button ui:field="profileButton" text="My profile"/>
            </g:cell>
            <g:cell horizontalAlignment="ALIGN_RIGHT" width="100%" verticalAlignment="ALIGN_MIDDLE">
                <g:Label ui:field="dataLabel"/>
            </g:cell>
            <g:cell width="100%">
                <g:Button ui:field="logoutButton" text="Logout"/>
            </g:cell>
        </g:HorizontalPanel>
    </g:HTMLPanel>
</ui:UiBinder>