<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HTMLPanel>
        <g:DialogBox ui:field="dialogPanel">
            <g:HTMLPanel>
                <table>
                    <tr>
                        <td>Username:</td>
                        <td>
                            <g:TextBox ui:field="nameBox"/>
                        </td>
                    </tr>
                    <tr>
                        <td>Password:</td>
                        <td>
                            <g:TextBox ui:field="passBox"/>
                        </td>
                    </tr>
                    <tr>
                        <td>Role:</td>
                        <td>
                            <g:ListBox ui:field="roleBox"/>
                        </td>
                    </tr>
                    <tr>
                        <td/>
                        <td>
                            <g:Button ui:field="submitButton" text="Submit"/>
                            <g:Button ui:field="cancelButton" text="Cancel"/>
                        </td>
                    </tr>
                </table>
            </g:HTMLPanel>
        </g:DialogBox>
    </g:HTMLPanel>
</ui:UiBinder>