<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HTMLPanel>
        <g:DialogBox ui:field="dialogPanel" text="Editing">
            <g:HTMLPanel>
                <g:FlexTable ui:field="flexTable"/>
                <g:VerticalPanel horizontalAlignment="ALIGN_RIGHT">
                    <g:HorizontalPanel width="100%" horizontalAlignment="ALIGN_RIGHT">
                        <g:Button ui:field="submitButton" text="Submit"/>
                        <g:Button ui:field="cancelButton" text="Cancel"/>
                    </g:HorizontalPanel>
                </g:VerticalPanel>
            </g:HTMLPanel>
        </g:DialogBox>
    </g:HTMLPanel>
</ui:UiBinder>