<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HTMLPanel>
        <g:DialogBox ui:field="dialogBox">
            <g:VerticalPanel>
                <g:cell horizontalAlignment="ALIGN_CENTER">
                    <g:Label ui:field="titleLabel">Your PROFILE</g:Label>
                </g:cell>
                <g:HorizontalPanel width="100%" height="100%">
                    <g:VerticalPanel>
                        <g:Image ui:field="avatarImg" width="150px" height="150px"/>
                        <g:TextBox ui:field="avatarUrl"/>
                    </g:VerticalPanel>
                    <g:VerticalPanel>
                        <g:FlexTable ui:field="table"/>
                    </g:VerticalPanel>
                </g:HorizontalPanel>
                <g:cell horizontalAlignment="ALIGN_RIGHT">
                    <g:HorizontalPanel>
                        <g:cell>
                            <g:Button ui:field="submitButton" text="submit"/>
                        </g:cell>
                        <g:cell>
                            <g:Button ui:field="closeButton" text="Close"/>
                        </g:cell>
                    </g:HorizontalPanel>
                </g:cell>
            </g:VerticalPanel>
        </g:DialogBox>
    </g:HTMLPanel>
</ui:UiBinder>